@model IEnumerable<MovieTheater.Models.Movie>
@{
    ViewData["Title"] = "ShowMovies";
}

<table class="table">
    <h5 class="card-title">Movies list</h5>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model=>model.MovieName)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Director)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.RelaseDateOf)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <td>
                    @Html.DisplayFor(modelItem=>item.MovieName)
                </td>
            
                <td>
                    @Html.DisplayFor(modelItem=>item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.Duration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.Director)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.RelaseDateOf)
                </td>
                <td>
                    <div class="form-group">
                        <a asp-action="DetailsMovie" asp-controller="Movie" asp-route-id="@item.Id">Details</a>
                        <a asp-action="EditMovie" asp-controller="Movie" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="DeleteMovie" asp-controller="Movie" asp-route-id="@item.Id">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

