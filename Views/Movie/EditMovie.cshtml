@model MovieTheater.Models.Movie
@{
    ViewData["Title"] = "EditMovie";
}
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Movie" asp-action="EditMovie" method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <dt class="col-sm-2" hidden>
                    @Html.DisplayNameFor(model=>model.Id)
                </dt>
                <dd class = "col-sm-10" hidden>
                    @Html.DisplayFor(model=>model.Id)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model=>model.MovieName)
                </dt>
                <dd class = "col-sm-10">
                    <input asp-for="MovieName" class="form-control" />
                    <span asp-validation-for="MovieName" class="text-danger"></span>
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model=>model.Type)
                </dt>
                <dd class = "col-sm-10">
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </dd> 
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model=>model.Duration)
                </dt>
                <dd class = "col-sm-10">
                    <input asp-for="Duration" class="form-control" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model=>model.Director)
                </dt>
                <dd class = "col-sm-10">
                    <input asp-for="Director" class="form-control" />
                    <span asp-validation-for="Director" class="text-danger"></span>
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model=>model.Price)
                </dt>
                <dd class = "col-sm-10">
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model=>model.RelaseDateOf)
                </dt>
                <dd class = "col-sm-10">
                    <input type="date" asp-for="RelaseDateOf" class="form-control" />
                    <span asp-validation-for="RelaseDateOf" class="text-danger"></span>                    
                </dd>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>