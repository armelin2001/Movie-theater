@model MovieTheater.Models.Movie
@{
    ViewData["Title"]  = "DetailsMovie";
}
<div class="container">
    <table class="table table-striped table-hover ">
       <thead>
           <tr> 
                <th class = "col-sm-2">
                    @Html.DisplayNameFor(model=>model.MovieName)
                </th>
                <th class = "col-sm-2">
                    @Html.DisplayNameFor(model=>model.Type)
                </th>
                <th class = "col-sm-2">
                    @Html.DisplayNameFor(model=>model.Duration)
                </th>
                <th class = "col-sm-2">
                    @Html.DisplayNameFor(model=>model.Director)
                </th>
                <th class = "col-sm-2">
                    @Html.DisplayNameFor(model=>model.Price)
                </th>
                <th class = "col-sm-2">
                    @Html.DisplayNameFor(model=>model.RelaseDateOf)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                
                <td class = "col-sm-10">
                    @Html.DisplayFor(model=>model.MovieName)
                </td>
                <td class = "col-sm-10">
                    @Html.DisplayFor(model=>model.Type)
                </td>
                <td class = "col-sm-10">
                    @Html.DisplayFor(model=>model.Duration)
                </td>
                <td class = "col-sm-10">
                    @Html.DisplayFor(model=>model.Director)
                </td>
                <td class = "col-sm-10">
                    @Html.DisplayFor(model=>model.Price)
                </td>
                <td class = "col-sm-10">
                    @Html.DisplayFor(model=>model.RelaseDateOf)
                </td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Back</a>
</div>